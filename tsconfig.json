{
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["ES2021"],
    "module": "ESNext",
    "target": "ES2021",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*"],
  "ts-node": {
    "transpileOnly": true
  }
}

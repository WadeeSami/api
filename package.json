{
  "name": "stereo-api",
  "type": "module",
  "version": "0.0.0",
  "description": "API backend for Stereo",
  "repository": "https://github.com/hoangvvo/stereo-api.git",
  "author": "Hoang Vo (https://hoangvvo.com/)",
  "license": "AGPL-3.0",
  "scripts": {
    "start": "node dist/main.js",
    "start:worker": "node dist/worker.js",
    "clean": "npx rimraf dist",
    "build:ts": "tsc",
    "build:copy": "mkdir dist/graphql/schemas && find src/graphql/ -type f | grep -i graphql$ | xargs -i cp {} dist/graphql/schemas",
    "build": "npm run codegen && npm run build:ts && npm run build:copy",
    "dev": "npx concurrently -k \"npm run codegen:watch\" \"npm run dev:api\" \"npm run dev:worker\"",
    "dev:api": "nodemon --ext ts --watch src --exec \"node -r dotenv/config --loader ts-node/esm/transpile-only\" ./src/main.ts",
    "dev:worker": "nodemon --ext ts --watch src --exec \"node -r dotenv/config --loader ts-node/esm/transpile-only\" ./src/worker.ts",
    "codegen": "graphql-codegen",
    "codegen:watch": "graphql-codegen --watch",
    "lint": "eslint ./ --ext json,ts,tsx --ignore-path .gitignore"
  },
  "dependencies": {
    "@benzene/core": "^0.8.1",
    "@benzene/extra": "^0.2.2",
    "@benzene/http": "^0.4.1",
    "@benzene/jit": "^0.1.4",
    "@benzene/ws": "^0.7.1",
    "@graphql-tools/load-files": "^6.5.4",
    "@graphql-tools/merge": "^8.2.14",
    "@graphql-tools/schema": "^8.3.14",
    "cors": "^2.8.5",
    "dataloader": "^2.1.0",
    "fast-json-stringify": "^4.1.0",
    "googleapis": "^101.0.0",
    "graphql": "^16.5.0",
    "graphql-scalars": "^1.17.0",
    "i18next": "^21.8.9",
    "ioredis": "^5.0.6",
    "mongodb": "^4.7.0",
    "nanoid": "^4.0.0",
    "next-connect": "^0.12.2",
    "pino": "^8.0.0",
    "pino-pretty": "^8.0.0",
    "slug": "^5.3.0",
    "undecim": "^0.2.0",
    "ws": "^8.8.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/typescript": "^2.5.1",
    "@graphql-codegen/typescript-resolvers": "^2.6.6",
    "@tsconfig/node16": "^1.0.3",
    "@types/cors": "^2.8.12",
    "@types/dlv": "^1.1.2",
    "@types/node": "^17.0.42",
    "@types/slug": "^5.0.3",
    "@types/spotify-api": "^0.0.16",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "concurrently": "^7.2.1",
    "dotenv": "^16.0.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  },
  "engines": {
    "node": "18.x"
  },
  "private": true
}

{
  "name": "stereo-api",
  "type": "module",
  "version": "0.0.0",
  "description": "API backend for Stereo",
  "repository": "https://github.com/hoangvvo/stereo-api.git",
  "author": "Hoang Vo (https://hoangvvo.com/)",
  "license": "AGPL-3.0",
  "scripts": {
    "start": "node dist/main.js",
    "start:worker": "node dist/worker.js",
    "clean": "npx rimraf dist",
    "build:ts": "tsc",
    "build:copy": "mkdir dist/graphql/schemas && find src/graphql/ -type f | grep -i graphql$ | xargs -i cp {} dist/graphql/schemas",
    "build": "npm run codegen && npm run build:ts && npm run build:copy",
    "dev": "npx concurrently -k \"npm run codegen:watch\" \"npm run dev:api\" \"npm run dev:worker\"",
    "dev:api": "nodemon --ext ts --watch src --exec \"node -r dotenv/config --loader ts-node/esm/transpile-only\" ./src/main.ts",
    "dev:worker": "nodemon --ext ts --watch src --exec \"node -r dotenv/config --loader ts-node/esm/transpile-only\" ./src/worker.ts",
    "codegen": "graphql-codegen",
    "codegen:watch": "graphql-codegen --watch",
    "lint": "eslint ./ --ext json,ts,tsx --ignore-path .gitignore"
  },
  "dependencies": {
    "@benzene/core": "^0.8.1",
    "@benzene/extra": "^0.2.2",
    "@benzene/http": "^0.4.1",
    "@benzene/jit": "^0.1.4",
    "@benzene/ws": "^0.7.1",
    "@graphql-tools/load-files": "^6.6.0",
    "@graphql-tools/merge": "^8.3.1",
    "@graphql-tools/schema": "^8.5.1",
    "cors": "^2.8.5",
    "dataloader": "^2.1.0",
    "fast-json-stringify": "^5.1.0",
    "googleapis": "^105.0.0",
    "graphql": "^16.5.0",
    "graphql-scalars": "^1.17.0",
    "i18next": "^21.8.16",
    "ioredis": "^5.2.2",
    "mongodb": "^4.8.1",
    "nanoid": "^4.0.0",
    "next-connect": "^0.13.0",
    "pino": "^8.4.0",
    "pino-pretty": "^8.1.0",
    "slug": "^5.3.0",
    "undecim": "^0.2.0",
    "ws": "^8.8.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.11.3",
    "@graphql-codegen/typescript": "^2.7.2",
    "@graphql-codegen/typescript-resolvers": "^2.7.2",
    "@tsconfig/node16": "^1.0.3",
    "@types/cors": "^2.8.12",
    "@types/dlv": "^1.1.2",
    "@types/node": "^18.6.4",
    "@types/slug": "^5.0.3",
    "@types/spotify-api": "^0.0.17",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "concurrently": "^7.3.0",
    "dotenv": "^16.0.1",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": "18.x"
  },
  "private": true
}

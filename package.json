{
  "name": "stereo-api",
  "type": "module",
  "version": "0.0.0",
  "description": "API backend for Stereo",
  "repository": "https://github.com/hoangvvo/stereo-api.git",
  "author": "Hoang Vo (https://hoangvvo.com/)",
  "license": "AGPL-3.0",
  "scripts": {
    "start": "node dist/main.js",
    "start:worker": "node dist/worker.js",
    "clean": "npx rimraf dist",
    "build:ts": "tsc",
    "build:copy": "mkdir dist/graphql/schemas && find src/graphql/ -type f | grep -i graphql$ | xargs -i cp {} dist/graphql/schemas",
    "build": "npm run codegen && npm run build:ts && npm run build:copy",
    "dev": "npx concurrently -k \"npm run codegen:watch\" \"npm run dev:watch\" \"npm run dev:worker:watch\"",
    "dev:watch": "nodemon --ext ts --watch src --exec \"node -r dotenv/config --loader ts-node/esm/transpile-only\" ./src/main.ts",
    "dev:worker:watch": "nodemon --ext ts --watch src --exec \"node -r dotenv/config --loader ts-node/esm/transpile-only\" ./src/worker.ts",
    "codegen": "graphql-codegen",
    "codegen:watch": "graphql-codegen --watch",
    "lint": "eslint ./ --ext json,ts,tsx --ignore-path .gitignore"
  },
  "dependencies": {
    "@benzene/core": "^0.8.0",
    "@benzene/extra": "^0.2.1",
    "@benzene/http": "^0.4.0",
    "@benzene/jit": "^0.1.3",
    "@benzene/ws": "^0.7.0",
    "@graphql-tools/load-files": "^6.5.1",
    "@graphql-tools/merge": "^8.2.0",
    "@graphql-tools/schema": "^8.3.0",
    "cors": "^2.8.5",
    "dataloader": "^2.0.0",
    "fast-json-stringify": "^2.7.11",
    "googleapis": "^89.0.0",
    "graphql": "^15.6.1",
    "graphql-scalars": "^1.12.0",
    "i18next": "^21.3.3",
    "ioredis": "^4.28.0",
    "mongodb": "^4.1.3",
    "nanoid": "^3.1.30",
    "next-connect": "^0.11.0",
    "pino": "^7.0.3",
    "slug": "^5.1.0",
    "undecim": "^0.1.1",
    "ws": "^8.2.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.2.1",
    "@graphql-codegen/typescript": "^2.2.4",
    "@graphql-codegen/typescript-resolvers": "^2.3.2",
    "@tsconfig/node16": "^1.0.2",
    "@types/cors": "^2.8.12",
    "@types/ioredis": "^4.27.8",
    "@types/node": "^16.11.2",
    "@types/slug": "^5.0.2",
    "@types/spotify-api": "^0.0.11",
    "@types/ws": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "concurrently": "^6.3.0",
    "dotenv": "^10.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.14",
    "pino-pretty": "^7.1.0",
    "prettier": "^2.4.1",
    "ts-node": "^10.3.1",
    "typescript": "^4.4.4"
  },
  "engines": {
    "node": "16.x"
  },
  "private": true
}
